<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.xhg.entity.ReceiveAddress" table="d_receive_address">
		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="native" />
		</id>
		
		<property name="user_id" type="java.lang.Integer">
			<column name="user_id" length="10"/>
		</property>
		
		<property name="receive_name" type="java.lang.String">
			<column name="receive_name" length="100"/>
		</property>
		
		<property name="full_address" type="java.lang.String">
			<column name="full_address" length="200"/>
		</property>
		
		<property name="postal_code" type="java.lang.String">
			<column name="postal_code" length="8"/>
		</property>
		
		<property name="mobile" type="java.lang.String">
			<column name="mobile" length="20"/>
		</property>
		
		<property name="phone" type="java.lang.String">
			<column name="phone" length="20"/>
		</property>
	</class>


</hibernate-mapping>